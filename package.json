{
  "publisher": "antfu",
  "name": "where-am-i",
  "displayName": "Where Am I?",
  "version": "0.3.0",
  "packageManager": "pnpm@10.19.0",
  "description": "Identify your current working folder in status bar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antfu/vscode-where-am-i"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/logo.png",
  "engines": {
    "vscode": "^1.62.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "where-am-i.config",
        "category": "Where Am I",
        "title": "Config the name and color"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Project Name In StatusBar extension configuration",
      "properties": {
        "where-am-i.colorful": {
          "type": "boolean",
          "default": true,
          "description": "Use color"
        },
        "where-am-i.color": {
          "type": "string",
          "default": "",
          "description": "The color of status text. When not defined, a random color will be used based on the project name."
        },
        "where-am-i.align": {
          "type": "string",
          "enum": [
            "left",
            "right"
          ],
          "default": "left",
          "description": "Defines The alignment of the label, requires restart of vscode"
        },
        "where-am-i.alignPriority": {
          "type": "number",
          "default": 100000,
          "description": "Defines priority of the label. Higher values mean the label should be shown more to the left, requires restart of vscode"
        },
        "where-am-i.textTransfrom": {
          "type": "string",
          "enum": [
            "none",
            "uppercase",
            "lowercase",
            "capitalize"
          ],
          "default": "capitalize",
          "description": "Defines project name text style inside template"
        },
        "where-am-i.icon": {
          "type": "string",
          "default": "folder-opened",
          "description": "Codicon id"
        },
        "where-am-i.template": {
          "type": "string",
          "default": "{icon} {project-name}",
          "description": "Defines template of project name placeholder"
        },
        "where-am-i.projectSetting": {
          "type": "object",
          "default": {},
          "description": "Project preference"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package --no-dependencies",
    "build": "tsdown src/index.ts --external vscode",
    "dev": "pnpm build --watch --sourcemap",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "release": "bumpp",
    "prepare": "vscode-ext-gen --output src/generated/meta.ts",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.62.0",
    "@vscode/vsce": "^3.6.2",
    "bumpp": "^10.3.1",
    "eslint": "^9.38.0",
    "reactive-vscode": "^0.4.0",
    "taze": "^19.8.1",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.3.0",
    "vsxpub": "^0.1.2"
  }
}
